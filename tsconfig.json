{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": "src/",
    "esModuleInterop": true,
    "incremental": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "noEmit": true,
    "paths": {
      "@assets/*": ["public/assets/*"],
      "@components/*": ["components/*"],
      "@feat/*": ["features/*"],
      "@hooks/*": ["hooks/*"],
      "@i18n/*": ["i18n/*"],
      "@lib/*": ["lib/*"],
      "@type/*": ["types/*"],
      "@ui/*": ["components/ui/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2015"
  },

  "exclude": [
    "node_modules",
    ".next",
    "src/generated",
    ".claude",
    ".conductor"
  ],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "tailwind.config.js"
  ]
}
